body
  background-image url('/img/bg.png')


i.plane

  font-size 100px
  margin 40px
  color rgba(0,64,128,0.3)
  position fixed
  left 10%
  top 10%

.hero-unit 
  background-color transparent

  h2
    font-size 100px


.timeline
  -webkit-user-select: none

  width 100%
  height 300px
  position fixed
  top 0px
  left 0px

  .time-scroll-cont
    position absolute
    top 200px
    left 10px
    right 10px
    height 20px



  .time-window
    margin 20px
    position absolute
    left 10px
    right 10px
    height 80%
    overflow-x auto
    overflow-y hidden


    .time-cont
      position absolute
      height 100%
      border-bottom 1px solid #333

      .tick-marks
        position absolute
        height 12%
        width 100%
        border none
        margin 0px
        padding 0px
        bottom 20px
        z-index 9000
        opacity 0.6


        .mark
          border-right 1px solid #999
          position absolute
          bottom 30%

          .lbl
            position absolute
            font-size: 12px
            bottom -20px
            right -10px

        .second-mark
          height 20%
          
        .five-second-mark
          height 25%

        .quarter-minute-mark
          height 50%

          .lbl
            font-size 9px
            color #999

        .half-minute-mark
          height 75%

          .lbl
            font-size 9px
            color #999

        .minute-mark
          height 100%
          border 1px solid #666
          
      .tick-marks:hover
        opacity 1

        

      .time
        position absolute
        width 100%
        height 50%
        margin 0px
        margin-top 25%
        margin-bottom 25%
        background-color #eee
        border 1px solid #333

        .video
          background-color rgba(64,0,128,0.4)
          width 100%
          height 12px


      .cursor-mark
        position absolute
        top 0px
        bottom 0px
        left 50%
        width 1px
        height 100%
        background-color #333
        z-index 8000


        i
          position absolute
          color #333
          

        i.icon-caret-up
          bottom 10%
          left -4px
          

        i.icon-caret-down
          top 10%
          left -4px

      .cursor-mark.user-mark
        background-color #ccc 
        display none

        i
          color #ccc

        .time-info
          position absolute
          top 10%
          left 0px
          padding-left 4px
          padding-right 4px
          font-size 10px
          color #ccc
          border 1px dotted #ccc

      .cursor-mark.active
        background-color green

        i
          color green


      .event
        position absolute
        background-color rgba(255,102,102,0.1)
        height 50%
        bottom 0px

    .time-cont:hover
      .cursor-mark.user-mark
        display block


  .timer-cont
    position absolute
    bottom 0px
    left 0px

    .timer 
      
      margin 40px

      .clock .digit
        font-size 16px
        background-color #eee
        border 1px dotted #333
        padding 4px

      ul.dropdown-menu
        margin-left 50px
        min-width: 0
        max-width 50px


  .scale-slider
    position absolute
    width 100px
    height 20px
    top 300px
    left 50px


.slider-cont
  width 100%
  height 100%
  position absolute
  bottom 0px
  -webkit-user-select: none

  .slider-groove
    position relative
    left 0px
    right 0px
    height 50%
    border 1px solid #333
    border-radius 4px
    background-color #ccc

  .slider-handle
    position absolute
    cursor ew-resize
    top 0px
    bottom 0px
    width 8px
    z-index 8000
    border-radius 8px
    background-color #333
    border 1px solid #333


